@page "/superheroes"
@inject ISuperHeroService SuperHeroService
@inject NavigationManager NavigationManager

<PageTitle>Super Heroin</PageTitle>

<h3>Super Heroin</h3>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Country</th>
            <th>Company</th>
            <th>Financial Bank</th>
            <th>Actions</th>
            <th>Position</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>

        @foreach (var hero in SuperHeroService.Heroes)
        {
            <tr>
                <td>@hero.FirstName</td>
                <td>@hero.LastName</td>
                <td>@hero.Country</td>
                <td>@hero.Company</td>
                <td>@hero.FinancialBank</td>
                <td>@hero.Actions</td>
                <td>@hero.Position?.Name</td>
                <td>
                   <button class="btn btn-primary" @onclick="(() => ShowHero(hero.Id))"><i class="oi oi-pencil"></i></button>
                </td>
            </tr>
        }

        </tbody>
        </table>

        <button class="btn btn-primary" @onclick="CreateNewHero">Create New Hero</button>

@code {
    protected override async Task OnInitializedAsync()
    {
        await SuperHeroService.GetSuperHeroes();
    }

     void ShowHero(int id)
    {
        NavigationManager.NavigateTo($"hero/{id}");
    }
    
}
