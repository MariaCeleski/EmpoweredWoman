@page "/superheroes"
@inject ISuperHeroService SuperHeroService

<PageTitle>Super Heroin</PageTitle>

<h3>Super Heroin</h3>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Country</th>
            <th>Company</th>
            <th>Financial Bank</th>
            <th>Actions</th>
            <th>Local Actions</th>
            <th>Position</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>

        @foreach (var hero in SuperHeroService.Heroes)
        {
            <tr>
                <td>@hero.FirstName</td>
                <td>@hero.LastName</td>
                <td>@hero.Country</td>
                <td>@hero.Company</td>
                <td>@hero.FinancialBank</td>
                <td>@hero.Actions</td>
                 <td>@hero.LocalActions</td>
                <td>@hero.Position.Name</td>
                <td>
                   
                </td>
            </tr>
        }

        </tbody>
        </table>

@code {
    protected override async Task OnInitializedAsync()
    {
        await SuperHeroService.GetSuperHeroes();
    }

    
}
